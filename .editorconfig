# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# disabled except for tab size
[original/**]
indent_style = unset
indent_size = 4
end_of_line = unset
charset = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

[*.yml]
indent_size = 2

[*.md]
indent_size = 2
